@page "{id}"
@model DogsBredsW.Pages.BackwardChaining.CaracteristicInfoModel
@{
    ViewData["Title"] = "CaracteristicInfo";
}

<h1>@Html.DisplayFor(model => model.RazaCarac.Nombre)</h1>

<h3>Razas que cumplen esta caracteristica</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Raza
            </th>
            <th>
                Altura (cm)
            </th>
            <th>
                Esperanza de vida (años)
            </th>
            <th>
                Actividad fisica recomendada
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RazaCarac.RazaCaracFisics)
        {
            <tr>
                <td>
                    <a asp-page="./RazaInfo" asp-route-id="@item.RazaId">@Html.DisplayFor(modelItem => item.Raza.Nombre)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Raza.Altura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Raza.EsperanzaDeVida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Raza.Actividad)
                </td>
            </tr>
        }
    </tbody>
</table>
