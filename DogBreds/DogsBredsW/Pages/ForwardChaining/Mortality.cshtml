@page "{id}/{TPid}/{Oid}/{Act}"
@model DogsBredsW.Pages.ForwardChaining.MortalityModel
@{
    ViewData["Title"] = "Mortality";
}
<h3 class="text-gray-900">Seleccione la esperanza de vida del perro.</h3>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="card col-6 border-left-success shadow">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-secondary">Esperanza de vida</h6>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <select asp-for="Carac" asp-items="Model.Caracteristics">
                    <option value="0">Seleccione una opción...</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>