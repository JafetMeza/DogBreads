@page "{id}/{TPid}/{Oid}/{Act}"
@model DogsBredsW.Pages.ForwardChaining.MortalityModel
@{
    ViewData["Title"] = "Mortality";
}
<h3>Seleccione la esperanza de vida del perro.</h3>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="card col-4">
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label>Esperanza de vida</label>
            </div>
            <div class="form-group">
                <select asp-for="Carac" asp-items="Model.Caracteristics">
                    <option value="0">Seleccione una opción...</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>