@page "{id}"
@model DogsBredsW.Pages.ForwardChaining.ResultModel
@{
    ViewData["Title"] = "Result";
}

<h1>@Html.DisplayFor(model => model.Raza.Nombre)</h1>

<h3>Caracteristicas generales</h3>
<strong>Altura (cm)</strong>
<p>@Html.DisplayFor(model => model.Raza.Altura)</p>
<strong>Esperanza de vida</strong>
<p>@Html.DisplayFor(model => model.Raza.EsperanzaDeVida)</p>
<strong>Actividad fisica recomendada</strong>
<p>@Html.DisplayFor(model => model.Raza.Actividad)</p>
<div class="row" style="display:flex">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <h3>Paises de origen</h3>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Nombre
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Raza.Origenes)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Origin.Nombre)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <h3>Caracteristicas fisicas</h3>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Nombre
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Raza.CaracFisics)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CaracFisic.Nombre)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <h3>Tipo de pelo</h3>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Nombre
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Raza.TiposDePelo)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HairType.Nombre)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
