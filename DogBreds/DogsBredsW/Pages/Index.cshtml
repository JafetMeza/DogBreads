@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

    <div class="text-center">
        <h1 class="display-4 text-gray-900">Buscador de Razas de Perros Gigantes</h1>

        <p >
            Seleccione una opcion del menu de la izquiera o de la barra de navegaicion de arriba para seleccionar un tipo de busqueda.
        </p>
    </div>

    <div class="row">
        <div id="carouselExampleIndicators" class="col-sm-12 carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item center-cropped active">
                    <img class="d-block w-100" style="object-fit: cover;" height="600" src="~/img/matt-nelson-aI3EBLvcyu4-unsplash.jpg" alt="Third slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" style="object-fit: cover;" height="600" src="~/img/james-barker-v3-zcCWMjgM-unsplash.jpg" alt="First slide">
                </div>
                <div class="carousel-item center-cropped">
                    <img class="d-block w-100" style="object-fit: cover;" height="600" src="~/img/judi-neumeyer-ECjHeJtRznQ-unsplash.jpg" alt="Second slide">
                </div>
                <div class="carousel-item center-cropped">
                    <img class="d-block w-100" style="object-fit: cover;" height="600" src="~/img/julian-schiemann-tWvrUZNEKVs-unsplash.jpg" alt="Third slide">
                </div>
                <div class="carousel-item center-cropped">
                    <img class="d-block w-100" style="object-fit: cover;" height="600" src="~/img/michael-oxendine-t7wwffh6x8E-unsplash.jpg" alt="Third slide">
                </div>
                <div class="carousel-item center-cropped">
                    <img class="d-block w-100" style="object-fit: cover;" height="600" src="~/img/ugur-arpaci-wOvSiqf9pZM-unsplash.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
